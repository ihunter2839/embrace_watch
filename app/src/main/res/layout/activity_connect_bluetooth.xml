<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bluetooth_device_list"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </ListView>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bluetooth_device_list_spinner"
        android:layout_below="@id/bluetooth_device_list" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/connect_bt_button"
        android:onClick="connectBluetooth"
        android:text="Connect To Bluetooth"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetooth_unavailable_text"
        android:layout_above="@id/connect_bt_button"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

</RelativeLayout>